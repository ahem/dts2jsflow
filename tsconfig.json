{
    "compilerOptions": {
        "module": "commonjs",
        "target": "esnext",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "strict": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "incremental": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "**/*.test.ts"
    ]
}
